---
import { Icon } from "astro-icon/components";
import Logo from "../assets/favicon.jpg";
---

<footer id="footer">
  <div class="footer-container">
    <div class="footer-content">
      <div class="footer-section about animate-fade-up">
        <h3>Sobre Nosotros</h3>
        <p>
          Plataforma líder en rifas online, con premios increíbles y una
          experiencia segura y transparente.
        </p>
      </div>
      <nav
        class="footer-section links animate-fade-up delay-1"
        aria-label="Enlaces rápidos"
      >
        <h3>Enlaces Rápidos</h3>
        <ul>
          <li><a href="/rifasact">Rifas Activas</a></li>
          <li><a href="/">Inicio</a></li>
          <li><a href="/ganadores">Referencias</a></li>
        </ul>
      </nav>
      <div class="footer-section social animate-fade-up delay-2">
        <h3>Síguenos</h3>
        <ul>
          <li>
            <a href="https://www.tiktok.com/@rifasvagox1">
              <Icon name="ri:tiktok-line" class="icon" />
            </a>
          </li>
          <li>
            <a href="https://www.instagram.com/rifasvagox">
              <Icon name="ri:instagram-line" class="icon" />
            </a>
          </li>
          <li>
            <a href="https://wa.me/+5804244698842">
              <Icon name="ri:whatsapp-line" class="icon" />
            </a>
          </li>
        </ul>
      </div>
    </div>
    <div class="footer-bottom animate-fade-up delay-3">
      <p>&copy; 2025 VagoxRifas. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>

<style>
  /* Reset básico para listas */
  ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  a {
    text-decoration: none;
    color: inherit;
  }

  a:hover,
  a:focus {
    color: #47e142;
    outline: none;
  }

  .footer-container {
    background-color: #fff;
    color: #222;
    font-family: "Montserrat", sans-serif;
    padding: 3rem 1.5rem 2rem;
    margin: 0 auto;
  }

  .footer-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 3rem;
  }

  .footer-section {
    flex: 1 1 250px;
  }

  .footer-section h3 {
    font-weight: 700;
    font-size: 1.4rem;
    margin-bottom: 1rem;
    color: #47e142;
  }

  .footer-section.about p {
    font-size: 1rem;
    line-height: 1.6;
    color: #555;
  }

  .footer-section.links ul li {
    margin-bottom: 0.75rem;
  }

  .footer-section.social ul {
    display: flex;
    gap: 1.5rem;
  }

  .footer-section.social a {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    color: #555;
    font-size: 1.8rem;
    transition:
      color 0.3s ease,
      transform 0.3s ease;
  }

  .footer-section.social a:hover,
  .footer-section.social a:focus {
    color: #47e142;
    transform: scale(1.15) rotate(5deg);
  }

  .icon {
    width: 28px;
    height: 28px;
  }

  .footer-bottom {
    margin-top: 3rem;
    text-align: center;
    font-size: 0.9rem;
    color: #999;
  }

  /* Animaciones CSS puras */
  @keyframes fadeUp {
    0% {
      opacity: 0;
      transform: translateY(30px);
    }
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-up {
    opacity: 0;
    animation-name: fadeUp;
    animation-fill-mode: forwards;
    animation-duration: 0.8s;
    animation-timing-function: ease-out;
  }

  .delay-1 {
    animation-delay: 0.3s;
  }

  .delay-2 {
    animation-delay: 0.6s;
  }

  .delay-3 {
    animation-delay: 0.9s;
  }

  /* Responsividad */
  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: 2rem;
      text-align: center;
    }

    .footer-section {
      flex: none;
    }

    .footer-section.social ul {
      justify-content: center;
    }
  }
</style>
