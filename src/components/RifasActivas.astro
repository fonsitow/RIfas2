---
import RaffleCard from '../components/tarjeta.astro';
import Imagen from '../assets/nevera1.jpg';
import Imagen2 from '../assets/nevera2.jpg';
import Imagen3 from '../assets/nevera3.jpg';
import iphone1 from '../assets/iphone1.jpg';
import iphone2 from '../assets/iphone2.jpg';
import iphone3 from '../assets/iphone2.jpg';

// Datos de ejemplo para las rifas
const rifas = [
  {
    titulo: 'Nevera Inteligente Samsung',
    descripcion: 'Participa por la oportunidad de ganar la nevera mejor calificada del momento',
    imagen : [
      Imagen.src,
      Imagen2.src,
      Imagen3.src,
    ],
    enlace: '/rifa/consola-ultima-generacion',
    boletos: 999,
    precio: '10€',
  },
  {
    titulo: 'Iphone 16',
    descripcion: 'No te pierdas, de la oportunidad de ganarte el nuevo Iphone 16.',
    imagen: [
      iphone1.src,
      iphone2.src,
      iphone3.src,
    ],
    enlace: '/rifa/viaje-caribe',
    boletos: 999,
    precio: '8€',
  },
  {
    titulo: 'Computadora de Alta Gama',
    descripcion: 'El equipo perfecto para gaming o trabajo profesional. Rendimiento insuperable.',
    imagen: [
      Imagen.src,
      Imagen2.src,
      Imagen3.src,
    ],
    enlace: '/rifa/computadora-alta-gama',
    boletos: 2000,
    precio: '15€',
  },
];
---

    <section class="section-container">
      <div class="rifas-grid">
        {rifas.map((rifa) => (
          <RaffleCard
            titulo={rifa.titulo}
            descripcion={rifa.descripcion}
            imagen={rifa.imagen}
            enlace={rifa.enlace}
            boletos={rifa.boletos}
            precio={rifa.precio}
          />
        ))}
      </div>
    </section>

    <style>
  .main-content {
    padding-top: 2rem;
    padding-bottom: 4rem;
  }
  
  .section-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 1.5rem;
    text-align: center;
  }
  
  .bg-dark {
    background-color: #2d3748;
    color: #e2e8f0;
  }

  .text-light {
    color: #e2e8f0;
  }

  .section-title {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: #1a202c;
  }
  
  .section-subtitle {
    font-size: 1.25rem;
    color: #4a5568;
    margin-bottom: 3rem;
  }
  
  .rifas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    justify-content: center;
  }

  .how-it-works-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 2rem;
  }

  .step-card {
    background-color: #4a5568;
    padding: 2rem 1.5rem;
    border-radius: 10px;
    text-align: center;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    transition: transform 0.3s ease;
  }

  .step-card:hover {
    transform: translateY(-10px);
  }

  .step-number {
    font-size: 2rem;
    font-weight: bold;
    color: #4299e1;
    margin-bottom: 1rem;
  }

  .step-card h3 {
    font-size: 1.5rem;
    margin-bottom: 0.5rem;
  }

  .step-card p {
    color: #a0aec0;
  }
  
 

</style>
